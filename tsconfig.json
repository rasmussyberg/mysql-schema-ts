{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "dist/",
    "removeComments": true,
    "noEmit": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist", "__test__"],
  "include": ["**/*.ts", "package.json"]
}
